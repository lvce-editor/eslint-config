{
  "name": "@lvce-editor/eslint-config",
  "version": "0.0.0-dev",
  "main": "index.js",
  "type": "module",
  "types": "index.d.ts",
  "scripts": {
    "type-check": "tsc -b",
    "format": "prettier --write .",
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "build": "node scripts/build.js",
    "lint": "echo ok"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/eslint-config.git"
  },
  "keywords": [
    "eslint-config"
  ],
  "author": "Lvce Editor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lvce-editor/eslint-config/issues"
  },
  "homepage": "https://github.com/lvce-editor/eslint-config#readme",
  "description": "",
  "dependencies": {
    "@eslint/js": "^9.18.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-package-json": "^0.19.0",
    "eslint-plugin-perfectionist": "^4.6.0",
    "eslint-plugin-project-structure": "^3.13.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "typescript-eslint": "^8.20.0"
  },
  "peerDependencies": {
    "eslint": ">= 9"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "execa": "^9.5.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 150
  },
  "jest": {
    "injectGlobals": false,
    "testTimeout": 240000,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/fixtures/"
    ]
  }
}
