{
  "name": "@lvce-editor/eslint-config",
  "version": "0.0.0-dev",
  "main": "index.js",
  "type": "module",
  "types": "index.d.ts",
  "scripts": {
    "build": "node packages/build/src/build.js",
    "format": "prettier --write .",
    "lint": "echo ok",
    "postinstall": "lerna bootstrap --ci",
    "test": "lerna run test",
    "type-check": "tsc -b"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/eslint-config.git"
  },
  "keywords": [
    "eslint-config"
  ],
  "author": "Lvce Editor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lvce-editor/eslint-config/issues"
  },
  "homepage": "https://github.com/lvce-editor/eslint-config#readme",
  "description": "",
  "dependencies": {
    "@eslint/css": "^0.4.0",
    "@eslint/js": "^9.21.0",
    "@eslint/json": "^0.10.0",
    "@eslint/markdown": "^6.2.2",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-n": "^17.16.1",
    "eslint-plugin-package-json": "^0.26.1",
    "eslint-plugin-perfectionist": "^4.9.0",
    "eslint-plugin-project-structure": "^3.13.2",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-yml": "^1.17.0",
    "typescript-eslint": "^8.25.0"
  },
  "peerDependencies": {
    "eslint": ">= 9"
  },
  "devDependencies": {
    "@lerna/legacy-package-management": "^8.2.0",
    "@types/node": "^22.10.6",
    "lerna": "^8.2.0",
    "prettier": "^3.5.2",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 150
  },
  "jest": {
    "injectGlobals": false,
    "testTimeout": 240000,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/fixtures/"
    ]
  }
}
