{
  "name": "@lvce-editor/eslint-config",
  "version": "0.0.0-dev",
  "main": "index.js",
  "type": "module",
  "types": "index.d.ts",
  "scripts": {
    "build": "node packages/build/src/build.js",
    "format": "prettier --write .",
    "lint": "echo ok",
    "postinstall": "lerna bootstrap --ci",
    "test": "lerna run test",
    "type-check": "tsc -b"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/eslint-config.git"
  },
  "keywords": [
    "eslint-config"
  ],
  "author": "Lvce Editor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lvce-editor/eslint-config/issues"
  },
  "homepage": "https://github.com/lvce-editor/eslint-config#readme",
  "description": "",
  "dependencies": {
    "@eslint/css": "0.13.0",
    "@eslint/js": "9.37.0",
    "@eslint/json": "0.13.2",
    "@eslint/markdown": "7.4.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-package-json": "0.57.0",
    "eslint-plugin-perfectionist": "4.15.1",
    "eslint-plugin-project-structure": "3.13.3",
    "eslint-plugin-unicorn": "61.0.2",
    "eslint-plugin-yml": "1.19.0",
    "typescript-eslint": "8.46.1"
  },
  "peerDependencies": {
    "eslint": ">= 9"
  },
  "devDependencies": {
    "@lerna/legacy-package-management": "^8.2.4",
    "@types/node": "^24.2.1",
    "lerna": "^8.2.4",
    "prettier": "^3.6.2",
    "typescript": "5.9.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 150
  },
  "jest": {
    "injectGlobals": false,
    "testTimeout": 240000,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/fixtures/"
    ]
  }
}
