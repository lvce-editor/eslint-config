{
  "name": "@lvce-editor/eslint-plugin-github-actions",
  "version": "0.0.0-dev",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-strip-types test/index.ts"
  },
  "keywords": [],
  "license": "MIT",
  "description": "",
  "dependencies": {
    "eslint-compat-utils": "0.6.5"
  },
  "devDependencies": {
    "eslint-plugin-yml": "1.18.0",
    "yaml-eslint-parser": "1.3.0",
    "eslint": "^9.35.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.6",
    "esbuild": "^0.25.9",
    "execa": "^9.6.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1"
  },
  "jest": {
    "injectGlobals": false,
    "testTimeout": 240000,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/fixtures/"
    ]
  }
}
