{
  "name": "@lvce-editor/eslint-plugin-github-actions",
  "version": "0.0.0-dev",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "node test/index.ts"
  },
  "keywords": [],
  "license": "MIT",
  "description": "Lint github action workflows.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/eslint-config.git"
  },
  "dependencies": {
    "eslint-compat-utils": "0.6.5",
    "yaml-eslint-parser": "1.3.0"
  },
  "devDependencies": {
    "eslint-plugin-yml": "1.19.0",
    "eslint": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.6",
    "esbuild": "^0.25.12",
    "execa": "^9.6.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5"
  },
  "jest": {
    "injectGlobals": false,
    "testTimeout": 240000,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/fixtures/"
    ]
  }
}
