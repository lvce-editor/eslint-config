{
  "name": "@lvce-editor/eslint-plugin-tsconfig",
  "version": "0.0.0-dev",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "node test/index.ts",
    "postinstall": "npm run build",
    "build": "esbuild --bundle src/index.ts --outfile=dist/index.js --external:@eslint/json --format=esm"
  },
  "keywords": [],
  "license": "MIT",
  "description": "",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.6",
    "esbuild": "^0.25.12",
    "execa": "^9.6.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5"
  },
  "jest": {
    "injectGlobals": false,
    "testTimeout": 240000,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/fixtures/"
    ]
  }
}
