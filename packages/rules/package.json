{
  "name": "@lvce-editor/eslint-config-rules",
  "version": "0.0.0-dev",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-strip-types test/index.ts",
    "postinstall": "npm run build",
    "build": "esbuild --bundle src/index.ts --outfile=dist/index.js --external:@eslint/json --format=esm"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "eslint": "^9.26.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "esbuild": "^0.25.3",
    "execa": "^9.5.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2"
  },
  "jest": {
    "injectGlobals": false,
    "testTimeout": 240000,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/fixtures/"
    ]
  }
}
